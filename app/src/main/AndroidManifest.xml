<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sekolah">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Tema2">
        <activity android:name=".activity.detaildata"
            android:label="Detail Data"
            android:theme="@style/AppTheme"
            android:parentActivityName=".activity.detaildata"/>
        <activity android:name=".activity.updatedata"
            android:label="Update Data"
            android:theme="@style/AppTheme"
            android:parentActivityName="activity.updatedata"/>
        <activity
            android:name=".activity.inputdata"
            android:label="Input Data"
            android:parentActivityName=".activity.inputdata"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.informasi"
            android:label="Tentang Aplikasi"
            android:parentActivityName=".activity.informasi"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.datamahasiswa"
            android:label="Data Mahasiswa"
            android:parentActivityName=".activity.datamahasiswa"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="Dashboard"
            android:theme="@style/AppTheme" />
    </application>

</manifest>